<h1>Authorize GA</h1>
<p>This is to connect google analytics to your lamp! By using the key, access will be given to provide all the necessary information to the lamp</p>
<h3>@ViewBag.ErrorMessage</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            Your access token:
            <div class="col-md-10">
                @Html.TextBox("Key")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Authorize" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<a href="/projects/@ViewBag.ProjectId/add-lamp/authorize-wiz">Previous </a>

